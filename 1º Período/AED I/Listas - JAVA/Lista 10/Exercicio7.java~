   public static void saudacao(){
      System.out.println("Será verificado se todos os termos de uma matríz são positivos ");
      
   }// fim saudação
   
   public static double MINMAX(double[][]a){
      int min = 99, max =0;
      for(int i = 0; i<a.length; i++){
         for(int j = 0; j<a[i].length; j++){
            if(a[i][j] < min){
               min = a[i][j];               
            }//fim if
         }//fim for   
      }//fim for
      for(int i = 0; i<a.length; i++){
         for(int j = 0; j<a[i].length; j++){
            if(a[i][j] == min){
         }//fim for   
      }//fim for      
            
            
   
   }//fim MINMAX        
       
}//fim classe          